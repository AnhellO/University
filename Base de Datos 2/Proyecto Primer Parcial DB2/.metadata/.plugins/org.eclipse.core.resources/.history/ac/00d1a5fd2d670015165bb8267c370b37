	private void btnBackMouseClicked(MouseEvent e) {
		ChooseTable ch = new ChooseTable();
		ch.setVisible(true);
		this.dispose();
	}

	private void btnExitMouseClicked(MouseEvent e) {
		this.dispose();
	}

