package cnx;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

public class Conexion {
	private Connection conexion = null;
	
	public Conexion() {
		try {
			Class.forName("oracle.jdbc.driver.OracleDriver");
		} catch (ClassNotFoundException e) {
			System.out.println("No se encontró el driver JBDC de Oracle");
			e.printStackTrace();
			return;
		}
		System.out.println("Oracle JDBC encontrado!");
		try {
			conexion = DriverManager.getConnection(
					"jdbc:oracle:thin:@localhost:1521:XE", "system",
					"oracle");

		} catch (SQLException e) {
			System.out.println("Conexión fallada. Verificar Consola");
			e.printStackTrace();
			return;
		}
		if (conexion != null) {
			System.out.println("Ejecutando Conexión...");
		} else {
			System.out.println("Se falló al hacer la conexión");
		}
	}
		/*try {
			Statement st = connection.createStatement();
			ResultSet rs = st.executeQuery("SELECT * FROM BD2.Cliente");
			while(rs.next()) {
				System.out.println(rs.getInt(1) + " " + rs.getString(2) + " " + rs.getString(3) +
						" " + rs.getString(4) + " " + rs.getDate(5));
			}
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}*/
	public Connection getConexion() {
		return conexion;
	}
	
	public void setConexion(Connection conexion) {
		this.conexion = conexion;
	}
	
}
